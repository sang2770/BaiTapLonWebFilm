@model BaiTapLonWebFilm.Models.TB_PHIM


@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Client/Views/Shared/_ClientTemplate.cshtml";
    var MaPhim = ViewBag.MaPhim;
}
<style>
    .group-Input input {
        border: 1px solid #ccc;
        padding: 5px;
        border-radius: 10px;
        outline: none;
        width: 100%;
        color: black
    }

        .group-Input input::placeholder {
            color: black;
        }

    .Label_Price {
        margin: 5px 0px;
    }

    .Title_Price {
        font-weight: bold;
        color: #2f80ed;
    }

    .Btn_Book {
        background-color: blue;
        display: inline-block;
        padding: 10px 20px;
        border: 1px solid #ccc;
        color: #fff;
        border-radius: 10px;
        box-shadow: 1px 1px 2px #2f80ed;
        cursor: pointer;
    }

    .Char_Container {
        
    }

    .Title_Char {
        display: flex;
    }

    .Title_Group {
        display: flex;
        align-items: center;
        padding: 5px;
    }

    .Group_Retangle {
        width: 20px;
        height: 20px;
        background-color: gray;
        margin-right: 5px;
    }

    .Content_Char {
    }

    .LineChar {
        display: flex;
    }

    .Number {
        background: gray;
        color: #fff;
        padding: 5px 10px;
        margin: 0px 5px;
        border: 1px solid #2f80ed;
    }

        .Number:hover {
            background: blue;
            cursor: pointer;
        }

    .red {
        border-color: yellow;
        background: red;
    }

    .Content_Char tr td:first-child {
        padding-right: 10px
    }
</style>
