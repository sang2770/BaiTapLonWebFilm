@model PagedList.IPagedList<BaiTapLonWebFilm.Models.TB_PHIM>
@using PagedList.Mvc
@{
    ViewBag.Title = "timkiem";
    Layout = "~/Areas/Admin/Views/Shared/_AdminTemplate.cshtml";
}

<h2>timkiem</h2>
<div class="col-12">
    <div class="main__title">
        <div class="main__title-wrap">
            @using (Html.BeginForm("timkiem", "Phim", FormMethod.Post))
            {<div class="main__title-form">
                    @Html.TextBox("txtsearch", "", htmlAttributes: new { type = "text", @placeholder = "Find movie / tv series.." })

                    <button type="submit">
                        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="8.25998" cy="8.25995" r="7.48191" stroke="#2F80ED" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></circle><path d="M13.4637 13.8523L16.3971 16.778" stroke="#2F80ED" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                    </button>
                </div>

            }

        </div>
    </div>
</div>

<div class="col-12">
    <div class="main__table-wrap">
        <h2 style="color:white">Danh Sách Phim</h2>
        <br />
        <br />
        <table class="main__table">
            <thead>
                <tr>
                    <th>
                        Quốc Gia
                    </th>

                    <th>
                        Thời Lượng
                    </th>
                    <th>
                        Tên Phim
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="main__table-text "> @Html.DisplayFor(modelItem => item.QUOCGIA)</div>
                        </td>


                        <td>
                            <div class="main__table-text">@Html.DisplayFor(modelItem => item.THOILUONG)</div>
                        </td>
                        <td>
                            <div class="main__table-text">@Html.DisplayFor(modelItem => item.TENPHIM)</div>
                        </td>

                        <td>
                            <div class="main__table-btns">
                                <a href="@Url.Action( "Details", new { id=item.MAPHIM })" class="main__table-btn main__table-btn--view">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.92,11.6C19.9,6.91,16.1,4,12,4S4.1,6.91,2.08,11.6a1,1,0,0,0,0,.8C4.1,17.09,7.9,20,12,20s7.9-2.91,9.92-7.6A1,1,0,0,0,21.92,11.6ZM12,18c-3.17,0-6.17-2.29-7.9-6C5.83,8.29,8.83,6,12,6s6.17,2.29,7.9,6C18.17,15.71,15.17,18,12,18ZM12,8a4,4,0,1,0,4,4A4,4,0,0,0,12,8Zm0,6a2,2,0,1,1,2-2A2,2,0,0,1,12,14Z" /></svg>
                                </a>
                                <a href="@Url.Action( "Edit", new { id=item.MAPHIM })" class="main__table-btn main__table-btn--edit">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M22,7.24a1,1,0,0,0-.29-.71L17.47,2.29A1,1,0,0,0,16.76,2a1,1,0,0,0-.71.29L13.22,5.12h0L2.29,16.05a1,1,0,0,0-.29.71V21a1,1,0,0,0,1,1H7.24A1,1,0,0,0,8,21.71L18.87,10.78h0L21.71,8a1.19,1.19,0,0,0,.22-.33,1,1,0,0,0,0-.24.7.7,0,0,0,0-.14ZM6.83,20H4V17.17l9.93-9.93,2.83,2.83ZM18.17,8.66,15.34,5.83l1.42-1.41,2.82,2.82Z" /></svg>
                                </a>

                                <a href="@Url.Action( "Delete", new { id = item.MAPHIM })" class="main__table-btn main__table-btn--delete open-modal">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M10,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,10,18ZM20,6H16V5a3,3,0,0,0-3-3H11A3,3,0,0,0,8,5V6H4A1,1,0,0,0,4,8H5V19a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V8h1a1,1,0,0,0,0-2ZM10,5a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6H10Zm7,14a1,1,0,0,1-1,1H8a1,1,0,0,1-1-1V8H17Zm-3-1a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,14,18Z" /></svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<div class="col-12">
    <div class="paginator">
        

        <ul class="paginator__paginator">

            @Html.PagedListPager(Model, page => Url.Action("timkiem",
            new { page = page, searchkey = ViewBag.keyword }))

        </ul>
        <div class="col-md-4 col-lg-4 col-xs-4 col-sm-4 text-right" style="color:white">
            Trang: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        </div>

    </div>
</div>
