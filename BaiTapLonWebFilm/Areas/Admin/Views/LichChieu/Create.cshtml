@model BaiTapLonWebFilm.Models.TB_LICHCHIEU

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminTemplate.cshtml";
}
<style>
    .size {
        width: 700px;
    }

    .form-group, h2, h4 {
        color: white;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <!-- main title -->
        <div class="col-12">
            <div class="main__title">
                <h2>Thêm mới lịch chiếu</h2>
            </div>
        </div>
        <!-- end main title -->
        <!-- form -->
        <div class="col-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                       <label class = "control-label col-md-2">Ngày chiếu</label>
                        <div class="col-md-10">
                            
                            @Html.EditorFor(model => model.NGAYCHIEU, new { htmlAttributes = new { @class = "form-control size",@type = "datetime-local" } })
                            @Html.ValidationMessageFor(model => model.NGAYCHIEU, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ngày kết thúc</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NGAYKETTHUC, new { htmlAttributes = new { @class = "form-control size", @type = "datetime-local" } })
                            @Html.ValidationMessageFor(model => model.NGAYKETTHUC, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Số phòng</label>

                        <div class="col-md-10">
                            @Html.DropDownList("MAPHONG", null, htmlAttributes: new { @class = "form-control size" })
                            @Html.ValidationMessageFor(model => model.MAPHONG, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Phim</label>

                        <div class="col-md-10">
                            @Html.DropDownList("MAPHIM", null, htmlAttributes: new { @class = "form-control size" })
                            @Html.ValidationMessageFor(model => model.MAPHIM, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default text-white" style="background-color:blue" />
                        </div>
                    </div>
                </div>
            }
        </div>     
        
        </div>
    </div>
